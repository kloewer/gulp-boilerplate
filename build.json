{
    "amd": true,
    "src":  "./src",
    "dest": "./build/assets",
    "directories": {
        "fonts": "fonts",
        "images": "images",
        "scripts": "js",
        "styles": "css"
    },
    "files": {
        "fonts": ["**/*.{woff2,woff,svg,eot,ttf,otf}"],
        "images": ["**/*.{png,jpg,jpeg,gif,svg}"],
        "scripts": ["**/*.js"],
        "styles": ["**/*.{sass,css}"]
    },
    "browserSync": {
        "proxy": "localhost",
        "watchForChange": "./build/**/*.{html,php}",
        "notify": false
    }
}
